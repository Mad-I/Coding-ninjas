<main>


	<div id="page-container">
		<div id="posts-container">
			<div id="page-numbers">
				<ul>
					<% (1..@max_pages).each do |pnum| %>
					<li>
						<%= link_to pnum, root_path(page: pnum)%>
					</li>
					<% end %>
				</ul>
				
			</div>
			<% if user_signed_in? %>
			<div id="new-post-form-container">
				<%= form_for @post, remote: true do |f| %>
					<%= f.label :content, "Add Post" %>
					<%= f.text_area :content, placeholder: "Type Here" %>
					<%= f.submit %>
				<% end %>
			</div>
			<% end %>

			<div id="posts-list-container" class="animated lightSpeedIn">
				<ul id="posts-list">
					<% @posts.each do |post| %>
						<%= render 'post', p: post %>
					<% end %>
				</ul>
			</div>
		</div>
		<div id="friends-container">
			<h5>Friends</h5>
			<div id="user-search-container">
				<input id="user-search">
			</div>
		</div>
	</div>

</main>
















